#!/bin/bash
## install figzz
uu="$(id -un)"
hash sudo 2>/dev/null && sudo=sudo; 
hash figlet 2>/dev/null || $sudo apt install -y figlet; 
$sudo mkdir $PREFIX/share 2>/dev/null; 
$sudo mv $PREFIX/share/figlet $HOME/tmp/figlet2 -b 2>/dev/null; 
$sudo mkdir -pm 775 $PREFIX/share/figlet; 
[ "$sudo" ] && $sudo chown $uu: $PREFIX/share/figlet; 
$sudo ln -s $HOME/zz/i/figfonts/* -t $PREFIX/share/figlet 2>/dev/null; 
printf %b "\n figs installed\n"; 
